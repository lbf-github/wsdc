	<select id="findProtalStorePage" resultType="com.titi.entity.ProtalStoreFormMap">
		select

		u.userid id,
		store.storeName,
		store.address,
		store.startprice,
		store.transportprice,
		store.transporttime,
		store.cheapennotice,
		store.newusernotice,
		store.tel,
		u.status,
		u.createdate
		from user u LEFT JOIN storeinfo store on u.account=store.uaccount
		where u.level=2
		<if test="storeName != null and storeName != ''">
			and store.storeName like '%${storeName}%'
		</if>
		order by u.status desc
	</select>
	
